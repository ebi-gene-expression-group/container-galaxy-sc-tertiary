<?xml version="1.0" encoding="utf-8"?>
<tool id="sc3-prepare" name="SC3 read scater object" version="@TOOL_VERSION@+galaxy0">
    <description>Loads normalised Scater object into a SC3 object</description>
    <macros>
        <import>sc3-macros.xml</import>
    </macros>
    <expand macro="requirements" />
    <command detect_errors="exit_code"><![CDATA[
 
        sc3-sc3-prepare.R -i 'scater_log.rds' -o '$R_sc3_prepared'
    
	]]></command>
    <inputs>
        <param type="data" name="scater_log" format="rdata", label="File name for a serialized SingleCellExperiment object" />
    </inputs>
    <outputs>
        <data name="R_sc3_prepared" format="rdata" from_work_dir="R_sc3_prepared.rds" />
    </outputs>
    <tests>
        <test>
            <param name="scater_log" value="scater_log.rds"/>
            <output name="R_sc3_prepared" file="R_sc3_prepared.rds"/>
        </test>
    </tests>
    <help><![CDATA[

    ]]></help>
    <expand macro="citations" />
</tool>
